@model IschoolJason.Models.PeopleModel;
@{
    ViewData["Title"] = @Model.pageTitle;
}

<h1 class="title">Our People</h1>
<div class="title">To view more about our faculty and staff, click below.</div>
<div id="testTab">
    <ul id="tab">
        <li><a href="#t1">Faculty</a></li>
        <li><a href="#t2">Staff</a></li>
    </ul>
    <div id="t1">
        <div id="fac">
            @foreach (var faculty in @Model.faculty)
            {
                <div class="person">
                    <img src="@faculty.imagePath" alt="pic" />
                    <div class="dialog" title="@faculty.name">
                        <img src="@faculty.imagePath" alt="pic" />
                        @if (faculty.username != "")
                        {
                            <h3 style="font-size:small">
                                @faculty.username
                            </h3>
                        }
                        @if (faculty.tagline != "")
                        {
                            <h3 style="font-size:small">
                                @faculty.tagline
                            </h3>
                        }
                        @if (faculty.title != "")
                        {
                            <h3 style="font-size:small">
                                @faculty.title
                            </h3>
                        }
                        @if (faculty.interestArea != "")
                        {
                            <h3 style="font-size:small">
                                Interest Area: @faculty.interestArea
                            </h3>
                        }
                        @if (faculty.office != "")
                        {
                            <h3 style="font-size:small">
                                Office: @faculty.office
                            </h3>
                        }
                        @if (faculty.website != "")
                        {
                            <h3 style="font-size:small">
                                <a href="@faculty.website" target="_blank">My Site</a>
                            </h3>
                        }
                        @if (faculty.phone != "")
                        {
                            <h3 style="font-size:small">
                                Phone: @faculty.phone
                            </h3>
                        }
                        @if (faculty.email != "")
                        {
                            <h3 style="font-size:small">
                                Email: @faculty.email
                            </h3>
                        }
                        @if (faculty.twitter != "")
                        {
                            <h3 style="font-size:small">
                                Twitter: @faculty.twitter
                            </h3>
                        }
                        @if (faculty.facebook != "")
                        {
                            <h3 style="font-size:small">
                                Facebook: @faculty.facebook
                            </h3>
                        }
                    </div>
                    <button class="opener">@faculty.name</button>
                </div>
            }
        </div>
    </div>
    <div id="t2">
        <div id="staff">
            @foreach (var staff in @Model.staff)
            {
                <div class="person">
                    <img src="@staff.imagePath" alt="pic" />
                    <div class="dialog" title="@staff.name">
                        @if (staff.username != "")
                        {
                            <h3 style="font-size:small">
                                @staff.username
                            </h3>
                        }
                        @if (staff.name != "")
                        {
                            <h3 style="font-size:small">
                                @staff.name
                            </h3>
                        }
                        @if (staff.tagline != "")
                        {
                            <h3 style="font-size:small">
                                @staff.tagline
                            </h3>
                        }
                        @if (staff.title != "")
                        {
                            <h3 style="font-size:small">
                                @staff.title
                            </h3>
                        }
                        @if (staff.interestArea != "")
                        {
                            <h3 style="font-size:small">
                                Interest Area: @staff.interestArea
                            </h3>
                        }
                        @if (staff.office != "")
                        {
                            <h3 style="font-size:small">
                                Office: @staff.office
                            </h3>
                        }
                        @if (staff.website != "")
                        {
                            <h3 style="font-size:small">
                                <a href="@staff.website" target="_blank">My Site</a>
                            </h3>
                        }
                        @if (staff.phone != "")
                        {
                            <h3 style="font-size:small">
                                Phone: @staff.phone
                            </h3>
                        }
                        @if (staff.email != "")
                        {
                            <h3 style="font-size:small">
                                Email: @staff.email
                            </h3>
                        }
                        @if (staff.twitter != "")
                        {
                            <h3 style="font-size:small">
                                Twitter: @staff.twitter
                            </h3>
                        }
                        @if (staff.facebook != "")
                        {
                            <h3 style="font-size:small">
                                Facebook: @staff.facebook
                            </h3>
                        }
                    </div>
                    <button class="opener">@staff.name</button>
                </div>
            }
        </div>
    </div>
</div>

